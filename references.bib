@article{Agrawal2017,
  title = {Generating Log-Normal Mock Catalog of Galaxies in Redshift Space},
  author = {Agrawal, Aniket and Makiya, Ryu and Chiang, Chi Ting and Jeong, Donghui and Saito, Shun and Komatsu, Eiichiro},
