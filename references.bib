  file = {/Users/ksf/Zotero/storage/P4QEV8Z7/m-api-52393f3d-6a1d-a451-7051-de5e3238a73e.pdf}
}

@article{Zehavi2018,
  title = {The {{Impact}} of {{Assembly Bias}} on the {{Galaxy Content}} of {{Dark Matter Halos}}},
