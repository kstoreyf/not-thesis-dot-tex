  author = {Parihar, Prachi and Gott, J. Richard and Vogeley, Michael S. and Gatt, J. Richard and Choi, Yun Young and Kim, Juhan and Kim, Sungsoo S. and Speare, Robert and Brownstein, Joel R. and Brinkmann, J.},
